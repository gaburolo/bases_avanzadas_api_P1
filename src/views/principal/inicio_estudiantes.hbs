<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/" method="get">TEC Clubs</a>
    <form action="/signin/Estudiantes" , method="post">
      <button class="btn btn-outline-light" type="submit">Cerrar Sesión</button>
    </form>
  </div>
</nav>
<p></p>
<div class="container text-center">
  <div class="card shadow-lg">
    <div class="card-hearder">
      <h3 align="center">Nuevo Club</h3>
    </div>
    <div class="card-body">
      <form action="/agregarClubes/Estudiante" method="POST">
        <div class="form-group mb-3">
          <textarea class="form-control" name="NombreClub" placeholder="Nombre del club"></textarea>
        </div>
        <div class="form-group mb-3">
          <input type="text" class="form-control" name="Categoria" placeholder="Categoría" autofocus>
        </div>
        <div class="form-group mb-3">
          <button class="btn btn-primary btn-dark" type="submit">Guardar</button>
        </div>
      </form>
    </div>
    <form action="/misClubes" , method="GET">
      <div class="form-group mb-3">
        <button class="btn btn-primary btn-dark" type="submit">Mis clubes</button>
      </div>
    </form>
  </div>
</div>
<p></p>
<div class="container text-center">
  <div class="card shadow-lg">
    <div class="card-hearder">
      <h3 align="center">Clubs Registrados</h3>
    </div>
    <table class="table">
      <thead class="table-dark">
        <tr>
          <th scope="col">Categoría</th>
          <th scope="col">Nombre del Club</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        {{#each consulta as |club|}}
        <tr>
          <th scope="row">{{club.Categoria}}</th>
          <td>{{club.NombreClub}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <form action="/agregarInteres/Estudiante" method="POST">
      <p>
        <select class="form-select" name="selectpicker" aria-label="Default select example">
          <option selected>Seleccione el club</option>
          {{#each consulta as |club|}}
          <option name="NombreClub" value={{_id}}>{{club.NombreClub}}</option>
          {{/each}}
        </select>
      </p>
      <button class="btn btn-dark" type="submit">Me interesa</button>
    </form>
  </div>
</div>
</div>